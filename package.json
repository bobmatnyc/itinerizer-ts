{
  "name": "itinerizer",
  "version": "0.1.0",
  "description": "A modern CLI tool for managing travel itineraries",
  "type": "module",
  "bin": {
    "itinerizer": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/index.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "typecheck": "tsc --noEmit",
    "version:bump": "node scripts/bump-version.js"
  },
  "keywords": ["cli", "itinerary", "travel", "typescript"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@clack/prompts": "^0.9.0",
    "commander": "^12.1.0",
    "picocolors": "^1.1.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
